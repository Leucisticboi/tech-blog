<div class="mui-row">
  <div class="mui-col-sm-10 mui-col-sm-offset-1">
    <div id="recent-posts"
         class="mui--text-dark-secondary mui--text-body2">{{username}}'s Posts</div>
    <div class="mui-divider"></div>
    <br>
    {{#if posts}}
    {{#each posts as |post|}}
    {{> prof-post post=post}}
    {{/each}}
    {{else}}
    <p>No posts available.</p>
    {{/if}}
  </div>
  <div class="mui-col-sm-10 mui-col-sm-offset-1">
    <div id="recent-posts"
         class="mui--text-dark-secondary mui--text-body2">{{username}}'s Comments</div>
    <div class="mui-divider"></div>
    <br>
    {{#if comments}}
    {{#each comments as |comment|}}
    {{> prof-comment comment=comment}}
    {{/each}}
    {{else}}
    <p>No comments available.</p>
    {{/if}}
  </div>
</div>